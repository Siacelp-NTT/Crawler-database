{
  "name": "jobcrawler-data-processor",
  "version": "1.0.0",
  "description": "Transform raw job data into clean, normalized database",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "process-once": "cross-env RUN_MODE=once node index.js",
    "test-data": "node test/test-processor.js",
    "status": "node test/check-status.js",
    "clear-db": "node test/clear-databases.js",
    "dashboard": "node analytics/dashboard.js",
    "export-reports": "node analytics/export-csv.js",
    "logs": "tail -f logs/combined.log",
    "logs-error": "tail -f logs/error.log",
    "stats": "tail -f logs/stats.log",
    "clean-logs": "rm -rf logs/*.log",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.2"
  }
}
